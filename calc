<body>

<div class="container">
    <h2>Translation Estimator</h2>
    
    <div class="form-group">
        <label for="modelType">Pricing Model</label>
        <select id="modelType" onchange="updateLabels()">
            <option value="word">Per Word Model</option>
            <option value="minute">Per Minute Model</option>
        </select>
    </div>

    <div class="form-group">
        <label id="quantityLabel" for="quantity">Word Count</label>
        <input type="number" id="quantity" placeholder="Enter amount..." min="1">
    </div>

    <div class="form-group">
        <label for="level">Difficulty Level</label>
        <select id="level">
            <option value="1">Level 1 (Standard)</option>
            <option value="2">Level 2 (Technical/Complex)</option>
            <option value="3">Level 3 (Specialized)</option>
        </select>
    </div>

    <button onclick="calculate()">Calculate Estimate</button>

    <div class="results" id="resultsArea">
        <div class="result-row">
            <span>Translator 1 Quote:</span>
            <span id="resT1"></span>
        </div>
        <div class="result-row">
            <span>Translator 2 Quote:</span>
            <span id="resT2"></span>
        </div>
        <div class="result-row">
            <span><strong>Total Labor:</strong></span>
            <span id="resLabor"></span>
        </div>
        <div class="result-row">
            <span>Overhead (30%):</span>
            <span id="resOverhead"></span>
        </div>
        <div class="result-row">
            <span>Profit (50% markup):</span>
            <span id="resProfit"></span>
        </div>
        <div class="result-row total">
            <span>Job Total:</span>
            <span id="resTotal"></span>
        </div>
        <div class="sub-text" id="resPerUnit"></div>
    </div>
</div>

<script>
    // Configuration based on CSV Data
    const rates = {
        word: {
            1: 0.10,
            2: 0.13,
            3: 0.15
        },
        minute: {
            1: 5.00,
            2: 6.50,
            3: 7.50
        }
    };

    function updateLabels() {
        const type = document.getElementById('modelType').value;
        const label = document.getElementById('quantityLabel');
        if (type === 'word') {
            label.textContent = "Word Count";
        } else {
            label.textContent = "Video Duration (Minutes)";
        }
    }

    function formatMoney(amount) {
        return '$' + amount.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2});
    }

    function calculate() {
        // 1. Get Inputs
        const type = document.getElementById('modelType').value;
        const qty = parseFloat(document.getElementById('quantity').value);
        const level = document.getElementById('level').value;

        if (!qty || qty <= 0) {
            alert("Please enter a valid quantity.");
            return;
        }

        // 2. Get Rate
        const rate = rates[type][level];

        // 3. Calculate Logic (Matches CSV formulas)
        
        // Labor
        const translator1Quote = qty * rate;
        const translator2Quote = qty * rate; // CSV implies 2 translators per job
        const totalLabor = translator1Quote + translator2Quote;

        // Overhead (30% of Labor)
        const overhead = totalLabor * 0.30;

        // Profit (50% of (Labor + Overhead))
        const costBasis = totalLabor + overhead;
        const profit = costBasis * 0.50;

        // Totals
        const jobTotal = totalLabor + overhead + profit;
        const pricePerUnit = jobTotal / qty;

        // 4. Update UI
        document.getElementById('resT1').textContent = formatMoney(translator1Quote);
        document.getElementById('resT2').textContent = formatMoney(translator2Quote);
        document.getElementById('resLabor').textContent = formatMoney(totalLabor);
        document.getElementById('resOverhead').textContent = formatMoney(overhead);
        document.getElementById('resProfit').textContent = formatMoney(profit);
        document.getElementById('resTotal').textContent = formatMoney(jobTotal);
        
        const unitLabel = type === 'word' ? 'word' : 'minute';
        document.getElementById('resPerUnit').textContent = `Customer Price per ${unitLabel}: ${formatMoney(pricePerUnit)}`;

        document.getElementById('resultsArea').style.display = 'block';
    }
</script>

</body>
